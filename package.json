{
  "name": "raz-react",
  "version": "0.0.1",
  "description": "raz react components",
  "main": "lib/index.js",
  "files": [
    "lib/**/*",
    "*.md"
  ],
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage",
    "clean": "rm -rf lib",
    "prebuild": "npm run clean && tsc",
    "build": "babel src --extensions \".ts,.tsx\" -d lib",
    "postbuild": "./finalize-build.sh",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "eslint --ext .tsx --ignore-path .gitignore .",
    "cov": "cov",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "package": "npm run test && npm run build && npm publish --public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aref00/raz-ui.git"
  },
  "keywords": [
    "raz",
    "ui",
    "react",
    "component"
  ],
  "author": "Aref Akbari <aref@pchas.ir> (http://pchas.ir/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aref00/raz-ui/issues"
  },
  "homepage": "https://github.com/aref00/raz-ui#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "babel-cli": "^6.26.0",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-transform-scss": "^1.1.0",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^8.11.0",
    "eslint-plugin-react": "^7.29.4",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "minify": "^8.0.4",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typed-css-modules": "^0.7.0",
    "typescript": "^4.6.2",
    "uglify-js": "^3.15.3"
  }
}
